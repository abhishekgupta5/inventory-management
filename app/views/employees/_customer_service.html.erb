<div class='flex flex-wrap md:-mx-2 lg:-mx-2'>
  <div class='mb-4 md:px-2 lg:px-2 w-full md:w-1/2 lg:w-1/3'>
    <div class='bg-white rounded-md shadow-md border overflow-hidden'>
      <h3 class='text-2xl font-bold px-4 py-2'><%= t '.returned_customers.header' %></h3>
      <table class='generic-table zebra'>
        <thead>
          <tr>
            <th><%= t '.returned_customers.table.recipient' %></th>
          </tr>
        </thead>
        <tbody>
          <% @returned_addresses.each do |address| %>
            <tr data-id='address-<%= address.id %>' class='clickable-row hover:bg-gray-100 cursor-pointer'>
              <td class="px-6 py-4 whitespace-nowrap">
                <a href="<%= address_path(address) %>" class="flex items-center hover:underline">
                  <div class="flex items-center">
                    <%= address.recipient %>
                  </div>
                </a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
