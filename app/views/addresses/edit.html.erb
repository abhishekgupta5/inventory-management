<%= employee_breadcrumb do %>
  <%= t '.address.header', id: @address.id %>
<% end %>

<div class="max-w-md mx-auto mt-8 p-4 bg-white rounded-lg shadow-lg">
  <h1 class="text-2xl font-semibold mb-4">Edit Address</h1>

  <%= form_with(model: @address, url: address_path(@address), method: :patch) do |form| %>
    <% if @address.errors.any? %>
      <div id="error_explanation" class="bg-red-100 text-red-700 p-2 rounded-lg mb-4">
        <h2 class="text-sm font-semibold mb-2"><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h2>
        <ul class="list-disc pl-4">
          <% @address.errors.full_messages.each do |message| %>
            <li class="text-xs"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :recipient, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :recipient, class: "mt-1 p-2 w-full rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500", required: true %>
    </div>

    <div class="mb-4">
      <%= form.label :street_1, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :street_1, class: "mt-1 p-2 w-full rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500", required: true %>
    </div>

    <div class="mb-4">
      <%= form.label :street_2, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :street_2, class: "mt-1 p-2 w-full rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :city, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :city, class: "mt-1 p-2 w-full rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500", required: true %>
    </div>

    <div class="mb-4">
      <%= form.label :state, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :state, class: "mt-1 p-2 w-full rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500", required: true %>
    </div>

    <div class="mb-4">
      <%= form.label :zip, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :zip, class: "mt-1 p-2 w-full rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500", required: true %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit 'Update Address', class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg cursor-pointer" %>
      <%= link_to 'Back', address_path(@address), class: "text-gray-500 hover:text-gray-700" %>
    </div>
  <% end %>
</div>
